<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
				http://www.springframework.org/schema/context
				http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<context:component-scan base-package="org.springframework.samples.petclinic.web" />
	
	<!-- ※ 사용자 정의 Controller 객체 등록 및 URL 매핑 주소 등록 -->
	<!--    - 『name=""』 속성에 매핑 주소를 등록한다. -->
	<!--      이 과정에서 Front Controller 가 갖고있는 확장자의 형태로 구성한다. -->
	<!--    - 『class= ""』 속성은 --> 
	<!--      Controller 객체의 패키지 경로가 포함된 클래스 이름을 등록한다. -->
	
	<!-- ① 기존 코드 -->
	<!-- ※ Annotation 표기법으로 Controller 객체를 등록할 수 있도록 한다. -->
	<context:component-scan base-package="com.test.mybatis" />
	
	
	<!-- ──────────────────── [회원가입] ─────────────────── -->
	
	<!-- 회원 가입 유형 선택 -->
	<bean name="/jointype.do" class="com.test.mvc.JoinTypeFormController"></bean>
	
	<!-- 회원가입 폼 연결 -->
	<bean name="/join.do" class="com.test.mvc.JoinFormController"></bean>
	
	<!-- 게스트 / 호스트 회원가입 -->
	<bean name="/memberinsert.do" class="com.test.mvc.MemberInsertController"></bean>
	
	<!-- 게스트 아이디 중복 검사 -->
	<bean name="/checkid.do" class="com.test.mvc.JoinCheckController"></bean>
	
	<!-- 게스트 닉네임 중복 검사 -->
	<bean name="/checknick.do" class="com.test.mvc.JoinCheckController"></bean>
	
	<!-- 게스트 개인정보 중복 검사 -->
	<bean name="/checkinfo.do" class="com.test.mvc.JoinCheckController"></bean>
	
	
	<!-- 게스트 비밀번호 확인 -->
	<bean name="/checkpw.do" class="com.test.mvc.JoinCheckController"></bean>
	
	
	<!-- ──────────────────────────────────────────────  -->
	
	
	<!-- ──────────────────── [로그인] ─────────────────── -->
	
	<!-- 로그인 페이지로 연결 -->
	<bean name="/loginform.do" class="com.test.mvc.LoginFormController"></bean>
	
	<!-- 로그인 수행 -->
	<bean name="/login.do" class="com.test.mvc.LoginController"></bean>
	
	<!-- 로그아웃 (세션 삭제) -->
	<bean name="/logout.do" class="com.test.mvc.LogoutController"></bean>
	
	<!-- 아이디 찾기 페이지로 연결 -->
	<bean name="/searchidform.do" class="com.test.mvc.SearchAccountFormController"></bean>
	
	<!-- 비밀번호 찾기 페이지로 연결 -->
	<bean name="/searchpwform.do" class="com.test.mvc.SearchAccountFormController"></bean>
	
	<!-- 아이디 찾기 수행 -->
	<bean name="/searchid.do" class="com.test.mvc.SearchAccountController"></bean>
	
	<!-- 비밀번호 찾기 수행 -->
	<bean name="/searchpw.do" class="com.test.mvc.SearchAccountController"></bean>
	<!-- ──────────────────────────────────────────────  -->


	<!-- ──────────────────── [호스트] 마이페이지 ─────────────────── -->
	
	<!-- 마이페이지 정보수정 페이지 (마이페이지 홈)로 연결 -->
	<bean name="/hostmypage.do" class="com.test.mvc.HostMyPageFormController"></bean>
	
	<!-- 마이페이지 정보수정 수행 -->
	<bean name="/hostmodify.do" class="com.test.mvc.HostUpdateController"></bean>

	<!-- 회원 탈퇴 -->
	<bean name="/hostunreg.do" class="com.test.mvc.HostDeleteController"></bean>
	
	<!-- ─────────────────────────────────────────────────  -->
	
	
	<!-- ──────────────────── [게스트] 마이페이지 ─────────────────── -->
	
	<!-- 마이페이지 정보수정 페이지 (마이페이지 홈)로 연결 -->
	<bean name="/guestmypage.do" class="com.test.mvc.GuestMyPageFormController"></bean>
	
	<!-- 마이페이지 정보수정 수행 -->
	<bean name="/guestmodify.do" class="com.test.mvc.GuestUpdateController"></bean>

	<!-- 회원 탈퇴 -->
	<bean name="/guestunreg.do" class="com.test.mvc.GuestDeleteController"></bean>
	
	<!-- ─────────────────────────────────────────────────  -->
	
	
	<!-- ──────────────────── [게스트] 사이드메뉴 ─────────────────── -->
	<!-- 이웃관리 메뉴 연결 -->
	<bean name="/friendlist.do" class="com.test.mvc.GuestFriendListController"></bean>
	
	<!-- 이웃 삭제 수행 -->
	<bean name="/frienddelete.do" class="com.test.mvc.GuestFriendDeleteController"></bean>
	
	<!-- 신고관리 메뉴 연결 -->
	<bean name="/guestredlist.do" class="com.test.mvc.GuestRedBoardListController"></bean>
	
	<!-- 게시글 관리 - 작성 글 연결 -->
	<bean name="/guestboardlist.do" class="com.test.mvc.GuestBoardListController"></bean>
	
	<!-- 게시글 관리 - 그룹 작성 글 연결 -->
	<bean name="/guestgroupboardlist.do" class="com.test.mvc.GuestGroupBoardListController"></bean>
	
		
	<!-- ─────────────────────────────────────────────────  -->
	
	<!--──────────────────── [호스트]스터디카페 ────────────────────-->
   <!-- 카페 정보 관련 Controller -->
   <bean name="/cafelist.do" class="com.test.mvc.CafeListController"></bean>
   <bean name="/cafedetail.do" class="com.test.mvc.CafeDetailController"></bean>
   
   <!-- 카페 등록 관련 Controller -->
   <bean name="/cafeinsertform.do" class="com.test.mvc.CafeInsertFormController"></bean>
   <bean name="/cafeinsert.do" class="com.test.mvc.CafeInsertController"></bean>
   
   <!-- 카페 수정 관련 Controller -->
   <bean name="/cafeupdateform.do" class="com.test.mvc.CafeUpdateFormController"></bean>
   <bean name="/cafeupdate.do" class="com.test.mvc.CafeUpdateController"></bean>
   
   <!-- 카페 삭제 관련 Controller -->
   <bean name="/cafedelete.do" class="com.test.mvc.CafeDeleteController"></bean>
   
   <!-- 카페 리뷰내역 관련 Controller -->
   <bean name="/cafereviewlist.do" class="com.test.mvc.CafeReviewListController"></bean>
   
   <!-- 카페 예약내역 관련 Controller -->
   <bean name="/cafereservelist.do" class="com.test.mvc.CafeReserveListController"></bean>
   <bean name="/cafereservedetail.do" class="com.test.mvc.CafeReserveDetailController"></bean>
   
   <!-- 스터디룸 등록 관련 Controller -->
   <bean name="/caferoominsert.do" class="com.test.mvc.CafeRoomInsertController"></bean>
   
   <!-- 스터디룸 수정 관련 Controller -->
   <bean name="/caferoomupdate.do" class="com.test.mvc.CafeRoomUpdateController"></bean>
   
   <!-- 호스트 피드백입력 관련 Controller -->
   <bean name="/hostfeedbackinsert.do" class="com.test.mvc.HostFeedbackInsertController"></bean>
   
   <!-- 호스트 신고내역 관련 Controller -->
   <bean name="/hostredlist.do" class="com.test.mvc.HostRedListController"></bean>
   
   <!-- 호스트 신고요청 관련 Controller -->
   <bean name="/hostredinsert.do" class="com.test.mvc.HostRedInsertController"></bean>
   <bean name="/hostredinsertform.do" class="com.test.mvc.HostRedInsertFormController"></bean>
   
   <!-- 호스트 통계내역 관련 Controller -->
   <bean name="/hoststatuslist.do" class="com.test.mvc.HostStatusListController"></bean>
   
   
   
   <!--──────────────────── [게스트]스터디그룹  ────────────────────-->
   <!-- 스터디그룹 예약내역 관련 Controller -->
   <bean name="/groupreservelist.do" class="com.test.mvc.GroupReserveListController"></bean>
   
   <!-- 스터디그룹 패널티내역 관련 Controller -->
   <bean name="/grouppenaltylist.do" class="com.test.mvc.GroupPenaltyListController"></bean>
   
   <!-- 스터디그룹 모임내역 관련 Controller -->
   <bean name="/groupmeetlist.do" class="com.test.mvc.GroupMeetListController"></bean>
   
   <!-- 스터디그룹 리뷰 관련 Controller -->
   <bean name="/groupreviewinsert.do" class="com.test.mvc.GroupReviewInsertController"></bean>
   
   <!-- 스터디그룹 예약취소 관련 Controller -->
   <bean name="/groupreservedelete.do" class="com.test.mvc.GroupReserveDeleteController"></bean>
	
	
	<!-- ③ mybatis 등록 과정에서 생겨나는 추가 코드 『2』 -->
	<!-- ※ mybatis 를 사용하기 위한 환경 설정 추가하는 과정에서 -->
	<!--    필요한 dataSource 를 사용하기 위한 환경 설정 추가 -->
	<bean id="localDataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass" value="oracle.jdbc.driver.OracleDriver"></property>
		<property name="url" value="jdbc:oracle:thin:@211.238.142.173:1521:xe"></property>
		<property name="username" value="scott"></property>
		<property name="password" value="tiger"></property>
	</bean>
	
	<!-- ② mybatis 등록 과정에서 생겨나는 추가 코드 『1』 -->
	<!-- ※ mybatis 를 사용하기 위한 환경 설정 추가 -->
	<!--    → SqlSessionFactoryBean 등록 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		
		<!-- ④ dataSource 를 등록하고 와서 다시 추가 -->
		<property name="dataSource" ref="localDataSource"></property>
		<!-- dataSource의 setter가 구성되어 있다는 말이다. 거기에 뭔가를 레퍼런스(ref)해서 넣겠다. -->
		
		<!-- ⑤ 매퍼 파일을 작성하고 와서 다시 추가 -->
		<!-- value 구성 과정 check~!!! -->
		<property name="mapperLocations" value="classpath:com/test/mybatis/mapper/*.xml"></property>
		<!-- 인터페이스에 객체화 시켜서 돌아가게하겠다~ 라는 의미의 코드 -->
	
	</bean>
	
	<!-- ⑥ mybatis 등록 과정에서 생겨나는 추가 코드 『3』 -->
	<!-- ※ SqlSession 을 사용하기 위한 환경 설정 추가 -->
	<!--    → SqlSessionTemplate 등록 -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory"></constructor-arg>
		<!-- 생성자의 인자값을 넘기면서 bean 구성을 하겠다.라는 의미 index=0은 첫번째 매개변수를 넘기겠다라는 의미.-->
	</bean>
	
	
</beans>